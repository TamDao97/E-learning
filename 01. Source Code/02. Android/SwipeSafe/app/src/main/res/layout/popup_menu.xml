        <LinearLayout
            style="@style/Menu_Layout_Item"
            android:id="@+id/lyFeedback"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_menu_popup"
                android:orientation="horizontal">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Báo cáo trường hợp"
                    android:textAlignment="textStart"
                    android:background="@color/transparent"
                    android:gravity="start|center" />

                <ImageView
                    style="@style/Menu_Icon"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_baocaotruonghop" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyLibrary"
            style="@style/Menu_Layout_Item"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:background="@drawable/btn_menu_popup"
                android:orientation="horizontal">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Thư viện tài liệu"
                    android:textAlignment="textStart"
                    android:background="@color/transparent"
                    android:gravity="start|center" />

                <ImageView
                    style="@style/Menu_Icon"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_library" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyCall"
            style="@style/Menu_Layout_Item"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_menu_popup"
                android:orientation="horizontal">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Danh mục điện thoại"
                    android:textAlignment="textStart"
                    android:background="@color/transparent"
                    android:gravity="start|center" />

                <ImageView
                    style="@style/Menu_Icon"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_mobile" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyWeb"
            style="@style/Menu_Layout_Item"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_menu_popup"
                android:orientation="horizontal">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Địa chỉ hữu ích"
                    android:textAlignment="textStart"
                    android:background="@color/transparent"
                    android:gravity="start|center" />

                <ImageView
                    style="@style/Menu_Icon"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_address" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyElearning"
            style="@style/Menu_Layout_Item"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_menu_popup"
                android:orientation="horizontal">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="E-Learning"
                    android:textAlignment="textStart"
                    android:background="@color/transparent"
                    android:gravity="start|center" />

                <ImageView
                    style="@style/Menu_Icon"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_elearning" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyAboutApp"
            style="@style/Menu_Layout_Item"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_about">

                <Button
                    style="@style/TitleMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:clickable="false"
                    android:drawablePadding="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Thông tin ứng dụng" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/transparent"></LinearLayout>
</LinearLayout>