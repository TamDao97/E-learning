<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMenu"
                style="@style/Toolbar_ImgMenu"
                android:clickable="false"
                android:src="@drawable/ic_menu"/>

            <LinearLayout
                android:id="@+id/lyCall"
                style="@style/Toolbar_CallButton"
                android:layout_width="match_parent"
                android:background="@drawable/btn_call_111"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Toolbar_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trong trường hợp khẩn cấp, hãy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        style="@style/Toolbar_ImgCall"
                        android:layout_height="34sp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        style="@style/Toolbar_TitleCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="GỌI 111" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/toolbarLine"
            style="@style/Toolbar_Line"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>
