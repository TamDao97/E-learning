<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <stroke android:width="3dp" android:color="#2EA836" />
                    <solid android:color="#FFFFFF" />
                    <padding android:bottom="0dp" android:left="25dp" android:right="20dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_focused="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <stroke android:width="3dp" android:color="#2EA836" />
                    <solid android:color="#FFFFFF" />
                    <padding android:bottom="0dp" android:left="25dp" android:right="20dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <stroke android:width="3dp" android:color="#007E48" />
                    <solid android:color="#FFFFFF" />
                    <padding android:bottom="0dp" android:left="25dp" android:right="20dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>